        String.prototype.like = function(search) {
            // Remove special chars
            search = search.replace(new RegExp("([\\.\\\\\\+\\*\\?\\[\\^\\]\\$\\(\\)\\{\\}\\=\\!\\<\\>\\|\\:\\-])", "g"), "\\$1");
            // Check matches
            return RegExp('^.*' + search + '$', 'i').test(this);
        };


