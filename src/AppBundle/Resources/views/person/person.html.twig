            $('#moods').jQCloud('update', words_moods);

            words_mood = [{% for item in mood %}{ text : "{{ item.title }}", weight : {{ item.nb }} } {% if loop.last %}{% else %},{% endif %}{% endfor %}];
            $('#mood').jQCloud(words_mood);
